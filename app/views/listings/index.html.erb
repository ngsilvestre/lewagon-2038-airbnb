<p style="color: green"><%= notice %></p>

<h1>Listings</h1>

<div id="listings">
  <form action="">
    <input type="text" name="query">
    <button type="submit">Search</button>
  </form>
  <% @listings.each do |listing| %>
    <%= render listing %>
    <p>
      <%= link_to "Show this listing", listing %>
    </p>
  <% end %>
</div>

<%= link_to "New listing", new_listing_path %>
