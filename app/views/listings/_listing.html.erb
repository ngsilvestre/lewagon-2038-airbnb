<div id="<%= dom_id listing %>">
  <%= link_to listing_path(listing, num_guests: params[:num_guests], start_date: params[:start_date], end_date: params[:end_date]), class: "space-y-2 block" do %>
    <div class="w-full aspect-square overflow-x-auto bg-white border border-gray-200 rounded-lg shadow">
      <%= image_tag "https://picsum.photos/seed/#{listing.location.parameterize}/300/300", class: "w-full h-full object-cover rounded" %>
    </div>
    <div class="space-y-0.5">
      <p class="font-bold text-gray-800"><%= listing.title %>
      <p class="text-sm text-gray-500"><%= listing.location %></i>
      </p>
      <p class="text-sm text-gray-500">
        $<%= format('%.0f', listing.price) %> AUD/day &middot; 
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-3 inline mb-1">
          <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z" clip-rule="evenodd" />
        </svg>
        <%= listing.rating  %>
      </p>
    </div>
  <% end %>
</div>
