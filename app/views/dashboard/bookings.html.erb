

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <!-- Content goes here -->
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl/7 font-bold text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Your Bookings:</h2>
    </div>
  </div>

  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% @user_bookings.each do |booking| %>
      <li class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow-sm">
        <div class="flex flex-1 flex-col p-8 pb-4">
          <%= image_tag booking.listing.photos[0], class: "mx-auto size-32 shrink-0 rounded-lg object-cover" %>
          <div class="border-b border-gray-200">
            <h3 class="mt-6 text-md font-medium text-gray-900"><%= booking.listing.title %></h3>
            <h3 class="my-2 text-sm text-gray-500"><%= booking.listing.location %></h3>
          </div>
          <p class="mt-2 text-sm text-gray-500"><%= pluralize(booking.listing.num_guests, "guest") %> allowed</p>
          <h3 class="mt-2 text-sm"><%= booking.start_date %> to <%= booking.end_date %></h3>
          <dl class="mt-1 flex grow flex-col justify-between">
            <dd>
            <% case booking.status %>
            <% when "confirmed" %>
              <span class="inline-flex items-center rounded-md bg-lime-50 px-2 py-1 text-xs font-medium text-lime-700 ring-1 ring-lime-600/20 ring-inset"><%= booking.status %></span>
            <% when "pending" %>
              <span class="inline-flex items-center rounded-md bg-amber-50 px-2 py-1 text-xs font-medium text-amber-800 ring-1 ring-amber-600/20 ring-inset"><%= booking.status %></span>
            <% when "denied" %>
              <span class="inline-flex items-center rounded-md bg-rose-50 px-2 py-1 text-xs font-medium text-rose-700 ring-1 ring-rose-600/10 ring-inset">Badge</span>
            <% end %>
            </dd>
          </dl>
        </div>
        <div>
          <div class="-mt-px flex divide-x divide-gray-200">
            <div class="flex w-0 flex-1">
              <%= link_to "View", booking.listing,
                class: "relative -mr-px inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-bl-lg border border-transparent py-4 text-sm font-semibold text-gray-900"%>
            </div>
            <div class="-ml-px flex w-0 flex-1">
              <%= link_to "Cancel",
                booking_path(booking),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "relative inline-flex w-0 flex-1 items-center justify-center gap-x-3 rounded-br-lg border border-transparent py-4 text-sm font-semibold text-gray-900" %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
