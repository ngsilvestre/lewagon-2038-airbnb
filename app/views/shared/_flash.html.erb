<% flash.each do |type, message| %>
  <% next unless message.present? %>

  <% css_class = case type.to_sym
    when :notice
      "bg-green-100 text-green-800 border border-green-300"
    when :alert
      "bg-yellow-100 text-yellow-800 border border-yellow-300"
    when :error
      "bg-red-100 text-red-800 border border-red-300"
    else
      "bg-blue-100 text-blue-800 border border-blue-300"
    end %>

  <div class="p-4 mb-4 rounded-lg <%= css_class %>">
    <div class="flex justify-between items-center">
      <span class="font-medium"><%= message %></span>
      <button type="button" class="ml-4 text-lg font-bold text-gray-500 hover:text-gray-700" onclick="this.parentElement.parentElement.remove()">&times;</button>
    </div>
  </div>
<% end %>
