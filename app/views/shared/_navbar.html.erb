
<header class="bg-gray-900">
  <nav aria-label="Global" class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8">
    <div class="flex lg:flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>

        <img src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=500" alt="" class="h-8 w-auto" />
      </a>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
    <% if user_signed_in? %>
      <%= render "shared/navbar_user_menu" %>
    <% else %>
      <%= link_to new_user_session_path, class: "text-sm/6 font-semibold text-white" do %>
        Login <span aria-hidden="true">&rarr;</span>
      <% end %>
    <% end %>

    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div role="dialog" aria-modal="true" class="lg:hidden">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-gray-900 p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-100/10">
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>

          <img src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=500" alt="" class="h-8 w-auto" />
        </a>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-400">
          <span class="sr-only">Close menu</span>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
            <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-white/10">
          <div class="py-6">
          <%= link_to "Login", new_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-white/5" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>


<nav class="bg-gray-800 text-white p-4 flex items-center justify-between">
  <div class="flex items-center">
    <%= link_to "OURBNB", root_path, class: "text-2xl font-bold" %>
  </div>
  <div class="flex space-x-4">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", dashboard_bookings_path, class: "text-white hover:text-gray-300" %>
      <%= link_to "Listings", dashboard_listings_path, class: "text-white hover:text-gray-300" %>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white hover:text-gray-300" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "text-white hover:text-gray-300" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "text-white hover:text-gray-300" %>
    <% end %>
  </div>
  <div>
    <h1 class="text-2xl font-bold text-white">Welcome to OURBNB</h1>
    <p class="text-white">Your one-stop solution for booking unique stays.</p>
  </div>
</nav>
