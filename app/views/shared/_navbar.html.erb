      </div>
      <div class="hidden lg:flex lg:flex-1 lg:justify-end col-span-1 items-center text-white">
        <%= render "shared/navbar_user_menu" %>
    </div>
    <% else %>
    <div class="flex justify-self-end col-span-4 items-center">
      <%= link_to new_user_session_path, class: "text-sm/6 font-semibold text-gray-900" do %>
        Login <span aria-hidden="true"></span>
      <% end %>
       &nbsp;&middot;&nbsp;
      <%= link_to new_user_registration_path, class: "text-sm/6 font-semibold text-gray-900" do %>
        Signup <span aria-hidden="true"></span>
      <% end %>
    </div>
    <% end %>


  </nav>
