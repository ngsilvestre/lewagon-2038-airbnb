  <nav aria-label="Global" class="container mx-auto grid grid-cols-5 justify-between p-3">
    <div class="col-span-1">
      <%= link_to root_path, class: "p-2 rounded bg-gray-900 text-gray-100 inline-flex justify-center items-center" do %>
        <i class="fa-solid fa-house fa-fw fa-2x"></i>
        <%# <img src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=rose&shade=500" alt="" class="h-8 w-auto" /> %>
